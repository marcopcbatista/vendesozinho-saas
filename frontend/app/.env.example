# ====================================
# CONFIGURAÇÕES DO SERVIDOR
# ====================================
NODE_ENV=development
PORT=5000

# ====================================
# BANCO DE DADOS
# ====================================
# MongoDB URI - substitua pelos seus dados
DB_URI=mongodb://localhost:27017/vendesozinho
# Ou MongoDB Atlas: mongodb+srv://usuario:senha@cluster.mongodb.net/vendesozinho

# ====================================
# SUPABASE (OPCIONAL - para recursos extras)
# ====================================
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ...sua_chave_service_role

# ====================================
# AUTENTICAÇÃO
# ====================================
# JWT Secret - DEVE ser alterado em produção
JWT_SECRET=sua_chave_jwt_super_secreta_de_pelo_menos_32_caracteres_aqui
JWT_EXPIRES_IN=7d

# Google OAuth (opcional)
GOOGLE_CLIENT_ID=seu_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=sua_chave_secreta_google

# ====================================
# PAGAMENTOS - STRIPE
# ====================================
# Chaves de teste (sk_test_...)
STRIPE_SECRET_KEY=sk_test_sua_chave_stripe_aqui
STRIPE_PUBLISHABLE_KEY=pk_test_sua_chave_publica_stripe

# Webhook secret do Stripe
STRIPE_WEBHOOK_SECRET=whsec_sua_webhook_secret_aqui

# ====================================
# INTELIGÊNCIA ARTIFICIAL - OPENAI
# ====================================
OPENAI_API_KEY=sk-sua_chave_openai_aqui

# ====================================
# URLs E DOMÍNIOS
# ====================================
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:5000

# ====================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# ====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_app

# ====================================
# CONFIGURAÇÕES DE UPLOAD (OPCIONAL)
# ====================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ====================================
# CONFIGURAÇÕES DE CACHE/REDIS (OPCIONAL)
# ====================================
REDIS_URL=redis://localhost:6379

# ====================================
# MONITORAMENTO E LOGS
# ====================================
LOG_LEVEL=info
SENTRY_DSN=https://sua-chave-sentry.ingest.sentry.io/projeto